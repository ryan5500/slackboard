<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>Post type</th>
      <th>User</th>
      <th>Text</th>
      <th>Ts</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= line_chart @chart_data, height: "800px" %>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.post_type %></td>
        <td><%= post.user %></td>
        <td><%= post.text %></td>
        <td><%= post.ts %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
